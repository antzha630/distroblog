{
  "name": "distro-scout",
  "version": "1.0.0",
  "description": "news monitoring tool for journalists",
  "main": "server/index.js",
  "scripts": {
    "start": "bash -c 'node server/index.js'",
    "start-direct": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "openai": "^4.28.0",
    "rss-parser": "^3.13.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "journalism",
    "rss",
    "ai",
    "news",
    "monitoring"
  ],
  "author": "Media Company",
  "license": "MIT"
}
